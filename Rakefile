require 'cucumber'
require 'cucumber/rake/task'

task :baixe_app do |task|
  puts 'Rodando os testes de Baixar App'
  sh "bundle exec cucumber -p browser -p prod -t @baixe_app"
end

task :central_doacoes do |task|
  puts 'Rodando os testes de Baixar App'
  sh "bundle exec cucumber -p console -p prod -t @central_doacoes"
end

task :sobre_nos do |task|
  puts 'Rodando os testes de Baixar App'
  sh "bundle exec cucumber -p console -p prod -t @sobre_nos"
end